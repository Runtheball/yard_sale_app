.col-md-6.col-md-offset-3
  %h2 Ye Olde Account Login Page
  .bubblewrap
    = image_tag "howdy.gif", :class => "howdy img-left" 
  = image_tag "bubble.png", :class => "bubble"
  = form_tag sessions_path, :class => "form_session" do
    .form-group
      = label_tag :email
      = text_field_tag :email, params[:email], :autofocus => true
      = label_tag :password
      = password_field_tag :password
      %br
      .input  
        = submit_tag "Login rat cheer!", :class => "session-submit"
      %hr
    .centered
      = link_to "Heck-fire! I'ma gonna need tuh Register first", new_user_path
